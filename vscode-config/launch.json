{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: FastAPI Backend",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.main:app",
        "--reload",
        "--host",
        "0.0.0.0",
        "--port",
        "8000"
      ],
      "jinja": true,
      "justMyCode": true,
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/backend"
      }
    },
    {
      "name": "Python: Celery Worker",
      "type": "python",
      "request": "launch",
      "module": "uv",
      "args": [
        "run",
        "celery",
        "-A",
        "app.celery_app",
        "worker",
        "--loglevel=info"
      ],
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/backend"
      }
    },
    {
      "name": "Python: Pytest",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": [
        "backend/tests",
        "-v"
      ],
      "justMyCode": false
    }
  ],
  "compounds": [
    {
      "name": "Backend (FastAPI + Celery)",
      "configurations": [
        "Python: FastAPI Backend",
        "Python: Celery Worker"
      ]
    }
  ]
}
